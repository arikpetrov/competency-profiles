toaster-container(toaster-options="{'time-out': 3000, 'close-button':true, 'position-class': 'toast-bottom-right'}")
div.container.sections-wrapper
	div.row
		div.primary.col-md-12.col-sm-12.col-xs-12
			section.section
				div.section-inner
					div.row
						h2.heading Filter Criteria
					div.row
						div.col-md-4.form-group
							span
								|Description filter
							input.form-control(placeholder="Description" data-ng-model="vm.search.description")
						div.col-md-4.form-group
							span
								|Gate Level filter
							select.form-control(data-ng-model="vm.search.gateLevel" )
								option(value="" label="All")
								option(value="base" label="Consultant")
								option(value="intermediate" label="Intermediate")
								option(value="senior" label="Senior")
					div.row
						div.col-md-12.form-group
							div.col-xs-2.col-xs-offset-1
								h3
									small Communication
								input(type="checkbox" data-ng-model="vm.search.communication" ng-true-value="'Y'" ng-false-value="''")
							div.col-xs-2
								h3
									small Leadership
								input(type="checkbox" data-ng-model="vm.search.leadership" data-ng-true-value="'Y'" data-ng-false-value="''")
							div.col-xs-2
								h3
									small Interpersonal
								input(type="checkbox" data-ng-model="vm.search.interpersonal" data-ng-true-value="'Y'" data-ng-false-value="''")
							div.col-xs-2
								h3
									small Conflict
								input(type="checkbox" data-ng-model="vm.search.conflict" data-ng-true-value="'Y'" data-ng-false-value="''")
							div.col-xs-2
								h3
									small Citizenship
								input(type="checkbox" data-ng-model="vm.search.citizenship" data-ng-true-value="'Y'" data-ng-false-value="''")
						div.col-md-12.col-sm-12.col-xs-12
							h2.heading Objectives
						div.row
						div.row
							div.col-md-12.col-sm-12.col-xs-12
								div.panel(data-ng-repeat="objective in vm.objectives | filter:vm.search:strict" data-ng-class="panel-success")
									div.panel-heading
										span
											|{{objective.description}}
									div.panel-body
										div.row
											div.col-xs-6
												h3
													small Supporting Example
												|{{objective.supportingExample}}
											div.col-xs-6
												h3 
													small Counter Example
												|{{objective.counterExample}}
										div.row
											div.col-xs-6
												div.form-group
													label(for="objectiveGateLevel{{$index+1}}") Gate Level
													select.form-control(name="gateLevel{{$index+1}}" data-ng-model="objective.gateLevel" )
														option(value="base" label="Base")
														option(value="intermediate" label="Intermediate")
														option(value="senior" label="Senior")
											div.col-xs-6
												div.form-group
													label(for="objectiveScore{{$index+1}}") Score
													input.form-control(type="text" name="objectiveScore{{$index+1}}" data-ng-model="objective.score")
										div.row
											div.col-xs-2.col-xs-offset-1
												h3
													small Communication
												input(type="checkbox" data-ng-model="objective.communication" ng-true-value="'Y'" ng-false-value="''")
											div.col-xs-2
												h3 
													small Leadership
												input(type="checkbox" data-ng-model="objective.leadership" data-ng-true-value="'Y'" data-ng-false-value="''")
											div.col-xs-2
												h3 
													small Interpersonal
												input(type="checkbox" data-ng-model="objective.interpersonal" data-ng-true-value="'Y'" data-ng-false-value="''")
											div.col-xs-2
												h3 
													small Conflict
												input(type="checkbox" data-ng-model="objective.conflict" data-ng-true-value="'Y'" data-ng-false-value="''")
											div.col-xs-2
												h3 
													small Citizenship
												input(type="checkbox" data-ng-model="objective.citizenship" data-ng-true-value="'Y'" data-ng-false-value="''")
										div.row
											a.btn.btn-success(data-ng-click="vm.save(objective)") Save Objective
